<?xml version="1.0" encoding="utf-8"?>
<kr.happy.myarmy.NestedCoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/graybacground"
    android:paddingTop="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
   >

    <LinearLayout
        android:id="@+id/com_linear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:weightSum="15"
        android:background="@color/white"
     >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="15dp"
            android:padding="10dp"
            android:layout_weight="5"
            android:scaleType="fitCenter"
            android:src="@drawable/daehantong"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="13dp"
            android:textColor="#9b9b9b"
            android:text="(주) 한국 공항공사"
            android:padding="3dp"
            android:layout_weight="3"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textSize="15dp"
            android:gravity="center_horizontal"
            android:text="2017상반기 산업대체복무자채용"
            android:textColor="#4a4a4a"
            android:layout_weight="4"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/com_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9b9b9b"
            android:text="     관심기업"
            android:textSize="12dp"
            android:layout_weight="3"
            android:gravity="center"
            android:tag="@string/notInterested"
            android:background="@drawable/interested"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

    <!--탭-->
    <android.support.design.widget.TabLayout
        android:id="@+id/com_tab"
        style="@style/tabLayout"
        app:tabTextAppearance="@style/tabLayoutText"
        app:layout_constraintTop_toBottomOf="@+id/com_linear"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/com_vp"
     />

    <android.support.v4.view.ViewPager
        android:id="@+id/com_vp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/com_tab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    </android.support.v4.view.ViewPager>
    </android.support.constraint.ConstraintLayout>

</kr.happy.myarmy.NestedCoordinatorLayout>


