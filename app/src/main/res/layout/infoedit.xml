<?xml version="1.0" encoding="utf-8"?>
<kr.happy.myarmy.Custom.NestedCoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/basic_margin"
    android:paddingRight="@dimen/basic_margin"
    android:paddingLeft="@dimen/basic_margin"
    android:background="@color/graybacground"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        >

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/enrolid"
            android:textSize="12dp"
            android:textColor="@color/nineb"/>

        <EditText
            android:id="@+id/info_id"
            style="@style/infoID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/id"
            app:layout_constraintBottom_toTopOf="@+id/rv_info"
            android:hint="입력칸입니다"
            android:layout_marginBottom="@dimen/basic_margin"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_info"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/info_id"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        </android.support.v7.widget.RecyclerView>

    </android.support.constraint.ConstraintLayout>

</kr.happy.myarmy.Custom.NestedCoordinatorLayout>