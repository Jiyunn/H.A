<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_comLogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:src="@drawable/daehantong"
        android:layout_weight="1"/>

    <View
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:src="@drawable/photoline"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_comTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="한국공항공사"
            android:textSize="14dp"
            android:padding="5dp"
            android:textColor="@color/orange_a"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_comContent1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2017년도 상반기 신입사원"
            android:textSize="12dp"
            android:textColor="#484848"/>

        <TextView
            android:id="@+id/tv_comContent2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(채용형인턴) 공개채용"
            android:textSize="12dp"
            android:textColor="#484848"/>

        <TextView
            android:id="@+id/tv_comContent3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D-5 | 경력무관 | 대졸"
            android:textSize="12dp"
            android:textColor="#484848"/>

    </LinearLayout>

</LinearLayout>