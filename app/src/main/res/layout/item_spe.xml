<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="twodata"
            type="me.happy.win3win.Recyclerview.TwoString"/>
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_marginBottom="2dp"
    android:padding="10dp">


    <TextView
        android:id="@+id/item_speTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:text="@{twodata.title}"
        android:textColor="#4a4a4a"
        android:textStyle="bold"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/item_speContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="left"
        android:text="@{twodata.content}"
        android:ellipsize="end"
        android:autoLink="web"
        android:textColorLink="@color/skyblue_a"
        android:textColor="@color/nineb"
        android:textSize="14dp" />

</LinearLayout>
</layout>