<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <data>
        <variable
            name="activity"
            type="me.happy.win3win.searchMenu.SearchActivity"/>
    </data>
<android.support.constraint.ConstraintLayout

    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy_a"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <ImageView
        android:id="@+id/toolbar_back2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_keyboard_arrow_left_white_36dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_search"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/toolbar_search"
        app:layout_constraintTop_toTopOf="@+id/toolbar_search" />

    <me.happy.win3win.custom.SearchEdittext
        android:id="@+id/toolbar_search"
        android:hint="검색어를 입력하세요"
        android:layout_width="0dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/searchshape"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="@color/nineb"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/toolbar_back2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/toolbar_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_search_black_24dp"
        android:backgroundTint="@color/navy_a"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintTop_toTopOf="@+id/toolbar_search"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_search"/>


</android.support.constraint.ConstraintLayout>
</layout>
