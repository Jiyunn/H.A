<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorControlHighlight">@color/whitegray_a</item>
        <item name="android:colorActivatedHighlight">@color/skyblue_a</item>
        <item name="android:colorControlNormal">@color/gch</item>
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorPrimaryDark">@color/navy_a</item>
        <item name="android:colorAccent">@color/navy_a</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorLink">@color/skyblue_a</item>
        <item name="android:colorEdgeEffect">@color/navy_a</item>
        <item name="android:colorBackgroundCacheHint">@color/navy_a</item>
    </style>


    <!--WRAP CONTENT-->
    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--CONSTRAINT CENTER-->
    <style name="ConstraintCenter">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
    </style>


    <!--SPLASH ACTIVITY-->
    <style name="SplashBtn">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--SIGNUP AND LOGIN EDITTEXT-->
    <style name="Login_joinET" parent="ConstraintCenter">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintHorizontal_bias">0</item>
        <item name="android:textColorHint">@color/nineb</item>
        <item name="android:textColor">@color/whitegray_a</item>
        <item name="android:textSize">14dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--SIGNUP WARN TV-->
    <style name="Join_WarnTV" parent="WrapContent">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/orange_a</item>
        <item name="android:textSize">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <!--BOTTOM TAB TEXT-->
    <style name="CustomTitleTextAppearance">
        <item name="android:textSize">10dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>



    <style name="ProfileImg">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintHorizontal_bias">0.1</item>
    </style>


    <style name="ProfileTvTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#9B9B9B</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="layout_constraintLeft_toLeftOf">@+id/img_profile</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="ProfileTvContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#4A4A4A</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="JobBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">#CBCBCB</item>
    </style>

    <style name="InfoID">
        <item name="android:padding">18dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColorHint">#9B9B9B</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">10</item>
        <item name="android:gravity">start</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">#4A4A4A</item>
        <item name="android:cursorVisible">true</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <style name="ResAndInfo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="layout_constraintHorizontal_weight">1</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>

    </style>

    <style name="ItemJobContent">
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="layout_constraintLeft_toRightOf">@+id/line</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TabLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="tabMode">fixed</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="android:background">@color/white</item>
        <item name="tabTextColor">#9B9B9B</item>
        <item name="android:tabStripEnabled">true</item>
        <item name="tabSelectedTextColor">@color/orange_a</item>
        <item name="tabIndicatorColor">@color/orange_a</item>
        <item name="tabIndicatorHeight">4dp</item>
    </style>

    <style name="TabLayoutText">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabLayoutSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="tabMode">fixed</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="android:background">@color/white</item>
        <item name="tabTextColor">#9B9B9B</item>
        <item name="android:tabStripEnabled">true</item>
        <item name="tabSelectedTextColor">@color/skyblue_a</item>
        <item name="tabIndicatorColor">@color/skyblue_a</item>
        <item name="tabIndicatorHeight">4dp</item>

    </style>


    <style name="Ellipsize">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>



    <style name="InfoCheckbox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/fora</item>
        <item name="android:buttonTint">@color/orange_a</item>
    </style>

    <style name="InfoTv">
        <item name="android:textSize">14dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/nineb</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>

    </style>

    <style name="PhoneNum">
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">4</item>
        <item name="android:textColor">@color/fora</item>
        <item name="android:background">@drawable/infobackground</item>
    </style>

    <style name="CertiTexts">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColorHint">@color/nineb</item>
        <item name="android:textColor">@color/fora</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


</resources>
