<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="bottomTabIcon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">10dp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="profileImg">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintHorizontal_bias">0.1</item>
       </style>


    <style name="profileTvTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#9B9B9B</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="profileTvContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#4A4A4A</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="jobBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">#CBCBCB</item>
    </style>

    <style name="infoID">
        <item name="android:padding">13dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColorHint">#9B9B9B</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">10</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">#4A4A4A</item>
    </style>

    <style name="resAndInfo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="layout_constraintHorizontal_weight">1</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="itemJobContent">
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="layout_constraintLeft_toRightOf">@+id/line</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintHorizontal_weight">1</item>
    </style>

    <style name="CustomTitleTextAppearance">
        <item name="android:textSize">10dp</item>
        <item name="android:gravity">center_horizontal</item>

    </style>

</resources>
